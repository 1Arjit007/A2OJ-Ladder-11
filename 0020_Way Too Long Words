#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin>>n;
    while(n--)
    {
        string s;
        cin>>s;
        if(s.size()<=10)
        {
            cout<<s<<endl;
        }
        else
        {
            int n=s.size()-2;
            cout<<s[0]<<n<<s[s.size()-1]<<endl;
        }
    }
	return 0;
}
